<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_list_film"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/siv_item_gambar_favorite"
            android:layout_margin="10dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:shapeAppearanceOverlay="@style/roundedimageview" />

        <LinearLayout
            android:id="@+id/ll_film_favorite"
            android:orientation="vertical"
            android:layout_marginLeft="95dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_judul_film_favorite"
                android:text="Judul"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_item_tanggal_rilis_film_favorite"
                android:text="Tanggal Rilis"
                android:backgroundTint="@color/purple_500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_item_sutradara_film_favorite"
                android:text="Sutradara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_delete_favorite"
            android:src="@drawable/ic_delete"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="300dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>